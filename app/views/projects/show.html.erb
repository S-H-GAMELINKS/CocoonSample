<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <% @tasks.each do |task| %>
    <p><%= task.description %></p>
    <% if task.done %>
      <p>Done</p>
    <% else %>
      <p>Not Done</p>
    <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
